<section class="why-mint-section" id="why-mint">
  <div class="section-container">
    <div class="section-header fade-in">
      <h2 class="section-title">
        {{ section.settings.section_title | default: "Why Choose Mint Garage" }}
      </h2>
      <p class="section-subtitle">
        {{ section.settings.section_subtitle | default: "Experience the difference with our professional garage transformation services" }}
      </p>
    </div>

    <div class="features-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'feature_item' %}
            <div class="feature-card fade-in" {{ block.shopify_attributes }}>
              <div class="feature-icon">
                {% if block.settings.icon_type == 'professional' %}
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
                    <rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect>
                    <path d="M9 14l2 2 4-4"></path>
                  </svg>
                {% elsif block.settings.icon_type == 'guarantee' %}
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                    <path d="M9 12l2 2 4-4"></path>
                  </svg>
                {% elsif block.settings.icon_type == 'experience' %}
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
                  </svg>
                {% elsif block.settings.icon_type == 'quality' %}
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 9V5a3 3 0 0 0-6 0v4"></path>
                    <rect x="2" y="9" width="20" height="11" rx="2" ry="2"></rect>
                  </svg>
                {% elsif block.settings.icon_type == 'support' %}
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                  </svg>
                {% elsif block.settings.icon_type == 'installation' %}
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
                  </svg>
                {% else %}
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20,6 9,17 4,12"></polyline>
                  </svg>
                {% endif %}
              </div>
              
              <div class="feature-content">
                <h3 class="feature-title">{{ block.settings.feature_title | default: "Professional Service" }}</h3>
                <p class="feature-description">{{ block.settings.feature_description | default: "Expert installation and quality craftsmanship" }}</p>
                
                {% if block.settings.show_stats %}
                  <div class="feature-stat">
                    <span class="stat-number">{{ block.settings.stat_number | default: "500+" }}</span>
                    <span class="stat-label">{{ block.settings.stat_label | default: "Projects" }}</span>
                  </div>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.settings.show_cta %}
      <div class="section-cta fade-in">
        <div class="cta-content">
          <h3 class="cta-title">{{ section.settings.cta_title | default: "Ready to Transform Your Garage?" }}</h3>
          <p class="cta-description">{{ section.settings.cta_description | default: "Get a free consultation and see how we can maximize your space" }}</p>
          <a href="{{ section.settings.cta_url | default: '/pages/consultation' }}" class="btn btn-primary scale-hover">
            {{ section.settings.cta_text | default: "GET FREE CONSULTATION" }}
            <svg class="arrow-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12,5 19,12 12,19"></polyline>
            </svg>
          </a>
        </div>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .why-mint-section {
    padding: 100px 0;
    background: white;
    position: relative;
  }

  .section-container {
    width: 100%;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 80px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-title {
    font-family: var(--font-header-family);
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    font-weight: bold;
    color: var(--color-dark-blue);
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .section-subtitle {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    color: #64748b;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 40px;
    margin-bottom: 80px;
  }

  .feature-card {
    background: white;
    padding: 40px 30px;
    border-radius: 20px;
    text-align: center;
    transition: all 0.4s ease;
    border: 1px solid #f1f5f9;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
    position: relative;
    overflow: hidden;
  }

  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(135deg, var(--color-primary-green), var(--color-secondary-green));
    transform: scaleX(0);
    transition: transform 0.4s ease;
  }

  .feature-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .feature-card:hover::before {
    transform: scaleX(1);
  }

  .feature-icon {
    background: linear-gradient(135deg, rgba(141, 192, 73, 0.1), rgba(184, 214, 107, 0.1));
    color: var(--color-primary-green);
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 25px;
    transition: all 0.4s ease;
  }

  .feature-card:hover .feature-icon {
    background: linear-gradient(135deg, var(--color-primary-green), var(--color-secondary-green));
    color: white;
    transform: scale(1.1);
  }

  .feature-title {
    font-family: var(--font-header-family);
    font-size: 1.4rem;
    font-weight: bold;
    color: var(--color-dark-blue);
    margin-bottom: 15px;
    line-height: 1.3;
  }

  .feature-description {
    color: #64748b;
    line-height: 1.6;
    margin-bottom: 20px;
    font-size: 0.95rem;
  }

  .feature-stat {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding-top: 20px;
    border-top: 1px solid #f1f5f9;
  }

  .stat-number {
    font-family: var(--font-header-family);
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--color-primary-green);
  }

  .stat-label {
    color: #64748b;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .section-cta {
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    border-radius: 20px;
    padding: 60px 40px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .section-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(141,192,73,0.05)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
    opacity: 0.5;
  }

  .cta-content {
    position: relative;
    z-index: 2;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-title {
    font-family: var(--font-header-family);
    font-size: clamp(1.8rem, 3vw, 2.5rem);
    font-weight: bold;
    color: var(--color-dark-blue);
    margin-bottom: 15px;
    line-height: 1.2;
  }

  .cta-description {
    color: #64748b;
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 30px;
  }

  .cta-content .btn {
    padding: 18px 40px;
    font-size: 1.1rem;
    font-weight: bold;
    background: linear-gradient(135deg, var(--color-primary-green), var(--color-secondary-green));
    color: white;
    text-decoration: none;
    border-radius: 50px;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    transition: all 0.3s ease;
    box-shadow: 0 10px 25px rgba(141, 192, 73, 0.25);
  }

  .cta-content .btn:hover {
    background: linear-gradient(135deg, #7daf3a, #a6c65a);
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 15px 35px rgba(141, 192, 73, 0.35);
  }

  .cta-content .btn .arrow-icon {
    transition: transform 0.3s ease;
  }

  .cta-content .btn:hover .arrow-icon {
    transform: translateX(5px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .why-mint-section {
      padding: 60px 0;
    }

    .section-container {
      padding: 0 15px;
    }

    .section-header {
      margin-bottom: 50px;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 30px;
      margin-bottom: 50px;
    }

    .feature-card {
      padding: 30px 25px;
    }

    .feature-icon {
      width: 70px;
      height: 70px;
      margin-bottom: 20px;
    }

    .feature-icon svg {
      width: 40px;
      height: 40px;
    }

    .section-cta {
      padding: 40px 25px;
      border-radius: 15px;
    }

    .cta-content .btn {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .features-grid {
      grid-template-columns: 1fr;
    }

    .feature-card {
      padding: 25px 20px;
    }

    .section-cta {
      padding: 30px 20px;
    }
  }

  /* Animation Classes */
  .fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease;
  }

  .fade-in.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .scale-hover {
    transition: transform 0.3s ease;
  }

  .scale-hover:hover {
    transform: scale(1.02);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Animation observer
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            entry.target.classList.add('visible');
          }, index * 150);
        }
      });
    }, observerOptions);

    const animatedElements = document.querySelectorAll('.why-mint-section .fade-in');
    animatedElements.forEach(el => observer.observe(el));
  });
</script>

