<div class="max-w-7xl mx-auto px-4 py-20">
  <h1 class="text-4xl font-bold text-white text-center mb-12">{{ collection.title }}</h1>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {% for product in collection.products %}
      <div class="bg-gray-800 rounded-lg overflow-hidden hover:scale-105 transition-transform">
        {% if product.featured_image %}
          <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}" class="w-full h-48 object-cover">
        {% endif %}
        <div class="p-6">
          <h3 class="text-white font-bold text-lg mb-2">{{ product.title }}</h3>
          <p class="text-green-400 font-bold text-xl">{{ product.price | money }}</p>
          <a href="{{ product.url }}" class="btn-primary inline-block mt-4">View Product</a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>