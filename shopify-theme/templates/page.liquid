{% comment %}
Template for static pages
{% endcomment %}

<div class="page-container">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="max-w-4xl mx-auto">
      
      <!-- Page Header -->
      <header class="text-center mb-16">
        <h1 class="font-montserrat font-bold text-white text-4xl md:text-5xl mb-6">
          {{ page.title }}
        </h1>
        {% if page.content contains 'consultation' or page.handle == 'consultation' %}
          <p class="font-montserrat text-gray-300 text-xl max-w-2xl mx-auto">
            Get your free garage transformation consultation and discover how we can maximize your space.
          </p>
        {% endif %}
      </header>

      <!-- Page Content -->
      <div class="prose prose-lg prose-invert max-w-none">
        <div class="font-montserrat text-gray-300 leading-relaxed">
          {{ page.content }}
        </div>
      </div>

      <!-- Consultation Form -->
      {% if page.content contains 'consultation' or page.handle == 'consultation' %}
        <div class="mt-16 bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-white/10 rounded-2xl p-8">
          <form action="{{ routes.root_url }}contact#contact_form" method="post" accept-charset="UTF-8" class="space-y-6">
            <input type="hidden" name="form_type" value="customer">
            <input type="hidden" name="utf8" value="âœ“">
            <input type="hidden" name="contact[tags]" value="consultation">
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="first_name" class="block text-white font-montserrat font-medium mb-2">First Name *</label>
                <input type="text" id="first_name" name="contact[first_name]" required class="form-input">
              </div>
              <div>
                <label for="last_name" class="block text-white font-montserrat font-medium mb-2">Last Name *</label>
                <input type="text" id="last_name" name="contact[last_name]" required class="form-input">
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-white font-montserrat font-medium mb-2">Email *</label>
                <input type="email" id="email" name="contact[email]" required class="form-input">
              </div>
              <div>
                <label for="phone" class="block text-white font-montserrat font-medium mb-2">Phone</label>
                <input type="tel" id="phone" name="contact[phone]" class="form-input">
              </div>
            </div>
            
            <div>
              <label for="city" class="block text-white font-montserrat font-medium mb-2">City *</label>
              <input type="text" id="city" name="contact[city]" required class="form-input">
            </div>
            
            <div>
              <label for="project_type" class="block text-white font-montserrat font-medium mb-2">Project Type</label>
              <select id="project_type" name="contact[project_type]" class="form-input">
                <option value="">Select a project type</option>
                <option value="complete_renovation">Complete Garage Renovation</option>
                <option value="flooring">Flooring Solutions</option>
                <option value="storage">Storage Systems</option>
                <option value="workbench">Workbench Installation</option>
                <option value="organization">Organization Solutions</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-white font-montserrat font-medium mb-2">Tell us about your project</label>
              <textarea id="message" name="contact[body]" rows="4" class="form-input" placeholder="Describe your garage transformation goals..."></textarea>
            </div>
            
            <button type="submit" class="w-full form-button">
              REQUEST FREE CONSULTATION
            </button>
          </form>
        </div>
      {% endif %}

      <!-- Back to Home -->
      <div class="text-center mt-16">
        <a href="{{ routes.root_url }}" class="inline-flex items-center text-green-400 hover:text-green-300 font-montserrat font-medium transition-colors duration-300">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Home
        </a>
      </div>
    </div>
  </div>
</div>