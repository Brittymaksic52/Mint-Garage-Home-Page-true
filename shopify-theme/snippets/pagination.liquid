{% comment %}
Pagination component
{% endcomment %}

{% if paginate.pages > 1 %}
  <nav class="flex items-center justify-center space-x-2" aria-label="Pagination">
    
    <!-- Previous Page -->
    {% if paginate.previous %}
      <a href="{{ paginate.previous.url }}" 
         class="inline-flex items-center px-4 py-2 bg-gray-800 hover:bg-gray-700 text-white rounded-lg font-montserrat font-medium transition-colors duration-300"
         aria-label="Previous page">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Previous
      </a>
    {% else %}
      <span class="inline-flex items-center px-4 py-2 bg-gray-800/50 text-gray-500 rounded-lg font-montserrat font-medium cursor-not-allowed">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Previous
      </span>
    {% endif %}

    <!-- Page Numbers -->
    <div class="flex items-center space-x-1">
      {% for part in paginate.parts %}
        {% if part.is_link %}
          <a href="{{ part.url }}" 
             class="inline-flex items-center justify-center w-10 h-10 bg-gray-800 hover:bg-green-500 text-white rounded-lg font-montserrat font-medium transition-colors duration-300"
             aria-label="Page {{ part.title }}">
            {{ part.title }}
          </a>
        {% else %}
          {% if part.title == paginate.current_page %}
            <span class="inline-flex items-center justify-center w-10 h-10 bg-green-500 text-white rounded-lg font-montserrat font-bold" 
                  aria-current="page" 
                  aria-label="Current page, page {{ part.title }}">
              {{ part.title }}
            </span>
          {% else %}
            <span class="inline-flex items-center justify-center w-10 h-10 text-gray-400 font-montserrat">
              {{ part.title }}
            </span>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>

    <!-- Next Page -->
    {% if paginate.next %}
      <a href="{{ paginate.next.url }}" 
         class="inline-flex items-center px-4 py-2 bg-gray-800 hover:bg-gray-700 text-white rounded-lg font-montserrat font-medium transition-colors duration-300"
         aria-label="Next page">
        Next
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    {% else %}
      <span class="inline-flex items-center px-4 py-2 bg-gray-800/50 text-gray-500 rounded-lg font-montserrat font-medium cursor-not-allowed">
        Next
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </span>
    {% endif %}
  </nav>

  <!-- Page Info -->
  <div class="text-center mt-4">
    <p class="text-gray-400 font-montserrat text-sm">
      Showing page {{ paginate.current_page }} of {{ paginate.pages }}
      ({{ paginate.items }} total items)
    </p>
  </div>
{% endif %}