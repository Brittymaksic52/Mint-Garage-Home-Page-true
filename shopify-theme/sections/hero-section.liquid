{% comment %}
Hero section with video background and call-to-action buttons
{% endcomment %}

<section class="relative w-full min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-b from-black via-gray-900 to-black">
  <!-- Video Background -->
  <div class="absolute inset-0 w-full h-full z-0">
    {% if section.settings.background_video != blank %}
      <video 
        autoplay 
        muted 
        loop 
        playsinline 
        class="absolute inset-0 w-full h-full object-cover opacity-30"
      >
        <source src="{{ section.settings.background_video }}" type="video/mp4">
      </video>
    {% else %}
      <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-black to-gray-800"></div>
    {% endif %}
    <div class="absolute inset-0 bg-black/40"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 w-full mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="max-w-5xl mx-auto space-y-8 animate-on-scroll">
      <!-- Main heading -->
      <h1 class="font-montserrat font-bold text-white text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl leading-tight tracking-wide">
        {{ section.settings.hero_title | default: "TRANSFORM YOUR GARAGE INTO A PREMIUM SPACE" }}
      </h1>
      
      <!-- Subheading -->
      <p class="font-montserrat font-normal text-white/90 text-lg sm:text-xl md:text-2xl max-w-3xl mx-auto leading-relaxed">
        {{ section.settings.hero_description | default: "Professional garage renovation and organization solutions that maximize your space and elevate your home's value." }}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center pt-8">
        <a href="{{ section.settings.primary_cta_url | default: '/pages/consultation' }}" class="btn-primary">
          {{ section.settings.primary_cta_text | default: "GET FREE CONSULTATION" }}
          <svg class="ml-2 w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
        
        <a href="{{ section.settings.secondary_cta_url | default: '#youtube-section' }}" class="inline-flex items-center justify-center gap-2 border-2 border-white/30 text-white hover:bg-white/10 font-montserrat font-semibold text-base sm:text-lg px-6 sm:px-8 py-4 sm:py-6 rounded-full backdrop-blur-sm transition-all duration-300 hover:scale-105 group">
          <svg class="mr-2 w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
          {{ section.settings.secondary_cta_text | default: "WATCH OUR WORK" }}
        </a>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-3 gap-8 max-w-2xl mx-auto pt-16">
        <div class="text-center animate-on-scroll">
          <div class="text-3xl md:text-4xl font-bold text-[{{ settings.primary_color }}] font-montserrat">
            {{ section.settings.stat_1_number | default: "500+" }}
          </div>
          <div class="text-white/80 font-montserrat font-medium">
            {{ section.settings.stat_1_label | default: "Projects Completed" }}
          </div>
        </div>
        <div class="text-center animate-on-scroll">
          <div class="text-3xl md:text-4xl font-bold text-[{{ settings.primary_color }}] font-montserrat">
            {{ section.settings.stat_2_number | default: "15+" }}
          </div>
          <div class="text-white/80 font-montserrat font-medium">
            {{ section.settings.stat_2_label | default: "Years Experience" }}
          </div>
        </div>
        <div class="text-center animate-on-scroll">
          <div class="text-3xl md:text-4xl font-bold text-[{{ settings.primary_color }}] font-montserrat">
            {{ section.settings.stat_3_number | default: "98%" }}
          </div>
          <div class="text-white/80 font-montserrat font-medium">
            {{ section.settings.stat_3_label | default: "Client Satisfaction" }}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative Elements -->
  <div class="absolute top-1/2 right-0 w-96 h-96 bg-[{{ settings.primary_color }}]/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-1/4 left-1/4 w-64 h-64 bg-[{{ settings.primary_color }}]/5 rounded-full blur-2xl"></div>
</section>

