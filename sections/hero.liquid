<section class="min-h-screen bg-gradient-to-b from-black via-gray-900 to-black flex items-center">
  <div class="max-w-7xl mx-auto px-4 text-center">
    <h1 class="text-6xl font-bold text-white mb-6">{{ section.settings.title | default: 'TRANSFORM YOUR GARAGE INTO A PREMIUM SPACE' }}</h1>
    <p class="text-xl text-gray-300 mb-8 max-w-3xl mx-auto">{{ section.settings.description | default: 'Professional garage renovation and organization solutions that maximize your space and elevate your home\'s value.' }}</p>
    <a href="/pages/consultation" class="btn-primary inline-block">GET FREE CONSULTATION</a>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {"type": "text", "id": "title", "label": "Title", "default": "TRANSFORM YOUR GARAGE INTO A PREMIUM SPACE"},
    {"type": "textarea", "id": "description", "label": "Description", "default": "Professional garage renovation and organization solutions."}
  ],
  "presets": [{"name": "Hero Section"}]
}
{% endschema %}