{{ 'component-hero.css' | asset_url | stylesheet_tag }}

<section class="hero-section" id="hero">
  <div class="hero-background">
    {% if section.settings.background_image != blank %}
      <div class="hero-image">
        {{ section.settings.background_image | image_url: width: 1920 | image_tag: 
           loading: 'eager',
           alt: section.settings.hero_title }}
      </div>
    {% endif %}
    <div class="hero-overlay"></div>
  </div>

  <div class="hero-content">
    <div class="hero-text fade-in">
      <h1 class="hero-title">
        {{ section.settings.hero_title | default: settings.hero_title | default: "Transform Your Garage Into The Ultimate Space" }}
      </h1>
      <p class="hero-subtitle">
        {{ section.settings.hero_subtitle | default: settings.hero_subtitle | default: "From cluttered chaos to organized perfection. Discover premium storage solutions, flooring, and organization systems that maximize your garage's potential." }}
      </p>

      <div class="hero-buttons">
        <a href="{{ section.settings.primary_cta_url | default: '/pages/consultation' }}" class="btn btn-primary scale-hover">
          {{ section.settings.primary_cta_text | default: settings.hero_cta_primary | default: "GET FREE CONSULTATION" }}
          <svg class="arrow-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12,5 19,12 12,19"></polyline>
          </svg>
        </a>
        
        <a href="{{ section.settings.secondary_cta_url | default: '#video-gallery' }}" class="btn btn-outline scale-hover">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <polygon points="10,8 16,12 10,16 10,8"></polygon>
          </svg>
          {{ section.settings.secondary_cta_text | default: settings.hero_cta_secondary | default: "WATCH OUR WORK" }}
        </a>
      </div>

      <!-- Stats -->
      <div class="hero-stats">
        <div class="stat-item">
          <div class="stat-number">{{ section.settings.stat_1_number | default: "500+" }}</div>
          <div class="stat-label">{{ section.settings.stat_1_label | default: "Projects Completed" }}</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">{{ section.settings.stat_2_number | default: "15+" }}</div>
          <div class="stat-label">{{ section.settings.stat_2_label | default: "Years Experience" }}</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">{{ section.settings.stat_3_number | default: "98%" }}</div>
          <div class="stat-label">{{ section.settings.stat_3_label | default: "Client Satisfaction" }}</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative Elements -->
  <div class="decorative-elements">
    <div class="decoration decoration-1"></div>
    <div class="decoration decoration-2"></div>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: linear-gradient(135deg, var(--color-dark-blue) 0%, #2a3f5f 100%);
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(29, 40, 59, 0.8);
    background: linear-gradient(135deg, 
      rgba(29, 40, 59, 0.9) 0%, 
      rgba(29, 40, 59, 0.7) 50%, 
      rgba(141, 192, 73, 0.1) 100%);
    z-index: 2;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: center;
    color: white;
  }

  .hero-title {
    font-family: var(--font-header-family);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: bold;
    line-height: 1.2;
    margin-bottom: 24px;
    text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
  }

  .hero-subtitle {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    line-height: 1.6;
    margin-bottom: 40px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0.95;
  }

  .hero-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin-bottom: 60px;
    flex-wrap: wrap;
  }

  .hero-buttons .btn {
    padding: 18px 36px;
    font-size: 16px;
    font-weight: bold;
    border-radius: 50px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .hero-buttons .btn-primary {
    background: linear-gradient(135deg, var(--color-primary-green), var(--color-secondary-green));
    color: white;
    box-shadow: 0 15px 35px rgba(141, 192, 73, 0.25);
  }

  .hero-buttons .btn-primary:hover {
    background: linear-gradient(135deg, #7daf3a, #a6c65a);
    box-shadow: 0 20px 40px rgba(141, 192, 73, 0.35);
    transform: translateY(-2px) scale(1.05);
  }

  .hero-buttons .btn-outline {
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.3);
    color: white;
  }

  .hero-buttons .btn-outline:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-2px) scale(1.05);
  }

  .arrow-icon {
    transition: transform 0.3s ease;
  }

  .btn:hover .arrow-icon {
    transform: translateX(5px);
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    max-width: 600px;
    margin: 0 auto;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-family: var(--font-header-family);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: bold;
    color: var(--color-primary-green);
    margin-bottom: 8px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .stat-label {
    font-weight: 500;
    opacity: 0.9;
    font-size: clamp(0.9rem, 1.5vw, 1rem);
  }

  .decorative-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .decoration {
    position: absolute;
    border-radius: 50%;
    background: rgba(141, 192, 73, 0.1);
    filter: blur(60px);
  }

  .decoration-1 {
    top: 50%;
    right: 0;
    width: 400px;
    height: 400px;
    transform: translateY(-50%);
  }

  .decoration-2 {
    bottom: 25%;
    left: 25%;
    width: 250px;
    height: 250px;
    background: rgba(141, 192, 73, 0.05);
    filter: blur(40px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-section {
      min-height: 90vh;
      padding: 40px 0;
    }

    .hero-buttons {
      flex-direction: column;
      align-items: center;
      gap: 15px;
    }

    .hero-buttons .btn {
      padding: 16px 30px;
      font-size: 14px;
      width: 100%;
      max-width: 280px;
    }

    .hero-stats {
      grid-template-columns: 1fr;
      gap: 30px;
      margin-top: 40px;
    }

    .decoration-1 {
      width: 300px;
      height: 300px;
    }

    .decoration-2 {
      width: 200px;
      height: 200px;
    }
  }

  @media (max-width: 480px) {
    .hero-content {
      padding: 0 15px;
    }
    
    .hero-title {
      margin-bottom: 20px;
    }
    
    .hero-subtitle {
      margin-bottom: 30px;
    }
    
    .hero-buttons {
      margin-bottom: 40px;
    }
  }

  /* Animation Enhancements */
  .fade-in {
    animation: heroFadeIn 1s ease-out forwards;
  }

  @keyframes heroFadeIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-buttons .btn {
    animation: buttonSlideIn 0.8s ease-out 0.3s both;
  }

  .hero-buttons .btn:nth-child(2) {
    animation-delay: 0.5s;
  }

  @keyframes buttonSlideIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .stat-item {
    animation: statFadeIn 0.6s ease-out both;
  }

  .stat-item:nth-child(1) { animation-delay: 0.7s; }
  .stat-item:nth-child(2) { animation-delay: 0.9s; }
  .stat-item:nth-child(3) { animation-delay: 1.1s; }

  @keyframes statFadeIn {
    from {
      opacity: 0;
      transform: translateY(15px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

