{% comment %}
Customer Testimonials section with rotating testimonials
{% endcomment %}

<section class="relative w-full py-20 bg-gradient-to-b from-black via-gray-900 to-black overflow-hidden">
  <!-- Background text -->
  <div class="absolute top-10 left-1/2 -translate-x-1/2 opacity-5 font-montserrat font-bold text-white text-[140px] tracking-[5.60px] leading-none z-0 select-none animate-on-scroll">
    REVIEWS
  </div>

  <div class="relative z-10 w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section heading -->
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="font-montserrat font-bold text-white text-[48px] mb-4 tracking-wide">
        {{ section.settings.section_title | default: "CUSTOMER TESTIMONIALS" }}
      </h2>
      <p class="font-montserrat font-normal text-gray-300 text-lg max-w-3xl mx-auto leading-relaxed">
        {{ section.settings.section_description | default: "Hear from satisfied customers who have transformed their garages with our premium solutions and expert service." }}
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {% for block in section.blocks %}
        {% if block.type == 'testimonial' %}
          <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-white/10 hover:border-[{{ settings.primary_color }}]/50 transition-all duration-500 hover:scale-105 animate-on-scroll">
            
            <!-- Testimonial Content -->
            <div class="p-8 space-y-6">
              <!-- Quote Icon -->
              <div class="flex justify-center">
                <svg class="w-8 h-8 text-[{{ settings.primary_color }}]" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14,17H17L19,13V7H13V13H16M6,17H9L11,13V7H5V13H8L6,17Z"/>
                </svg>
              </div>

              <!-- Rating -->
              <div class="flex justify-center space-x-1">
                {% assign rating = block.settings.testimonial_rating | default: 5 %}
                {% for i in (1..5) %}
                  {% if i <= rating %}
                    <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  {% else %}
                    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  {% endif %}
                {% endfor %}
              </div>

              <!-- Testimonial Text -->
              <blockquote class="text-center">
                <p class="font-montserrat font-normal text-white text-lg leading-relaxed italic">
                  "{{ block.settings.testimonial_text | default: "The transformation of our garage exceeded all expectations. Professional, efficient, and the quality is outstanding." }}"
                </p>
              </blockquote>

              <!-- Customer Info -->
              <div class="text-center space-y-2">
                <div class="flex items-center justify-center space-x-3">
                  {% if block.settings.customer_photo %}
                    <img 
                      src="{{ block.settings.customer_photo | image_url: width: 60 }}" 
                      alt="{{ block.settings.customer_name }}"
                      class="w-12 h-12 rounded-full object-cover border-2 border-[{{ settings.primary_color }}]/30"
                    >
                  {% else %}
                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-[{{ settings.primary_color }}] to-[{{ settings.secondary_color }}] flex items-center justify-center">
                      <span class="text-white font-montserrat font-bold text-lg">
                        {{ block.settings.customer_name | default: "Customer" | slice: 0 }}
                      </span>
                    </div>
                  {% endif %}
                  <div class="text-left">
                    <h4 class="font-montserrat font-bold text-white text-lg">
                      {{ block.settings.customer_name | default: "Happy Customer" }}
                    </h4>
                    <p class="font-montserrat text-gray-400 text-sm">
                      {{ block.settings.customer_location | default: "Toronto, ON" }}
                    </p>
                  </div>
                </div>
                {% if block.settings.project_type %}
                  <div class="inline-block bg-[{{ settings.primary_color }}]/20 text-[{{ settings.primary_color }}] px-3 py-1 rounded-full text-xs font-montserrat font-medium">
                    {{ block.settings.project_type }}
                  </div>
                {% endif %}
              </div>

              <!-- Before/After images if provided -->
              {% if block.settings.before_image or block.settings.after_image %}
                <div class="grid grid-cols-2 gap-4 mt-6">
                  {% if block.settings.before_image %}
                    <div class="relative">
                      <img 
                        src="{{ block.settings.before_image | image_url: width: 200 }}" 
                        alt="Before"
                        class="w-full h-24 object-cover rounded-lg"
                      >
                      <div class="absolute top-2 left-2 bg-red-500 text-white px-2 py-1 rounded text-xs font-montserrat font-bold">
                        BEFORE
                      </div>
                    </div>
                  {% endif %}
                  {% if block.settings.after_image %}
                    <div class="relative">
                      <img 
                        src="{{ block.settings.after_image | image_url: width: 200 }}" 
                        alt="After"
                        class="w-full h-24 object-cover rounded-lg"
                      >
                      <div class="absolute top-2 left-2 bg-[{{ settings.primary_color }}] text-white px-2 py-1 rounded text-xs font-montserrat font-bold">
                        AFTER
                      </div>
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            </div>

            <!-- Hover glow effect -->
            <div class="absolute inset-0 bg-gradient-to-r from-[{{ settings.primary_color }}]/5 to-[{{ settings.secondary_color }}]/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl"></div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Review Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-16 animate-on-scroll">
      <div class="text-center space-y-2">
        <div class="text-4xl font-bold text-[{{ settings.primary_color }}] font-montserrat">
          {{ section.settings.total_reviews | default: "500+" }}
        </div>
        <div class="text-white font-montserrat font-medium">Total Reviews</div>
      </div>
      <div class="text-center space-y-2">
        <div class="text-4xl font-bold text-[{{ settings.primary_color }}] font-montserrat">
          {{ section.settings.average_rating | default: "4.9" }}
        </div>
        <div class="text-white font-montserrat font-medium">Average Rating</div>
      </div>
      <div class="text-center space-y-2">
        <div class="text-4xl font-bold text-[{{ settings.primary_color }}] font-montserrat">
          {{ section.settings.satisfaction_rate | default: "98%" }}
        </div>
        <div class="text-white font-montserrat font-medium">Satisfaction Rate</div>
      </div>
      <div class="text-center space-y-2">
        <div class="text-4xl font-bold text-[{{ settings.primary_color }}] font-montserrat">
          {{ section.settings.referral_rate | default: "85%" }}
        </div>
        <div class="text-white font-montserrat font-medium">Referral Rate</div>
      </div>
    </div>

    <!-- Call to action -->
    <div class="text-center animate-on-scroll">
      <div class="max-w-2xl mx-auto space-y-6">
        <h3 class="font-montserrat font-bold text-white text-2xl">
          {{ section.settings.cta_title | default: "Join Our Satisfied Customers" }}
        </h3>
        <p class="font-montserrat font-normal text-gray-300 text-lg">
          {{ section.settings.cta_description | default: "Experience the same quality and service that has earned us hundreds of five-star reviews." }}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="{{ section.settings.primary_cta_url | default: '/pages/consultation' }}" class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-[{{ settings.primary_color }}] to-[{{ settings.secondary_color }}] hover:from-[{{ settings.accent_color }}] hover:to-[{{ settings.primary_color }}] text-white font-montserrat font-bold text-lg px-8 py-4 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 group">
            {{ section.settings.primary_cta_text | default: "GET YOUR QUOTE" }}
            <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          {% if section.settings.secondary_cta_url %}
            <a href="{{ section.settings.secondary_cta_url }}" class="inline-flex items-center justify-center gap-2 border-2 border-[{{ settings.primary_color }}] text-[{{ settings.primary_color }}] hover:bg-[{{ settings.primary_color }}] hover:text-white font-montserrat font-bold text-lg px-8 py-4 rounded-full transition-all duration-300 hover:scale-105">
              {{ section.settings.secondary_cta_text | default: "READ MORE REVIEWS" }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

