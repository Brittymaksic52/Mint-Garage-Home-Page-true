<!doctype html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{ page_title }}{% unless page_title contains shop.name %} - {{ shop.name }}{% endunless %}</title>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>tailwind.config={theme:{extend:{colors:{primary:'{{ settings.primary_color }}'}}}}</script>
  {{ content_for_header }}
  <style>
    body{background:#000;color:#fff;font-family:'Montserrat',sans-serif}
    .btn-primary{background:linear-gradient(to right,#8dc049,#b8d66b);color:#fff;padding:12px 32px;border-radius:9999px;font-weight:bold;transition:all 0.3s}
    .btn-primary:hover{transform:scale(1.05)}
  </style>
</head>
<body>
  <header class="bg-black/95 backdrop-blur-md border-b border-white/10 sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 flex items-center justify-between h-20">
      <a href="/" class="text-2xl font-bold text-white">{{ shop.name }}</a>
      <nav class="hidden md:flex space-x-8">
        <a href="/collections/all" class="text-white hover:text-green-400">Products</a>
        <a href="/pages/about" class="text-white hover:text-green-400">About</a>
        <a href="/pages/contact" class="text-white hover:text-green-400">Contact</a>
      </nav>
      <a href="/cart" class="text-white hover:text-green-400">Cart ({{ cart.item_count }})</a>
    </div>
  </header>
  
  <main>{{ content_for_layout }}</main>
  
  <footer class="bg-black border-t border-white/10 py-12">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <p class="text-gray-400">&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>