{% comment %}
  Generic page template
{% endcomment %}

<div class="page-content">
  <div class="container">
    <div class="page-header">
      <h1 class="page-title">{{ page.title }}</h1>
    </div>
    
    <div class="page-body">
      {{ page.content }}
    </div>
  </div>
</div>

<style>
  .page-content {
    padding: 60px 0;
  }

  .page-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .page-title {
    font-size: 2.5rem;
    color: var(--color-dark-blue);
    margin-bottom: 20px;
  }

  .page-body {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .page-body h2,
  .page-body h3,
  .page-body h4 {
    color: var(--color-dark-blue);
    margin: 2rem 0 1rem;
  }

  .page-body p {
    margin-bottom: 1.5rem;
  }

  .page-body ul,
  .page-body ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .page-body li {
    margin-bottom: 0.5rem;
  }

  .page-body a {
    color: var(--color-primary-green);
    text-decoration: underline;
  }

  .page-body a:hover {
    color: var(--color-dark-blue);
  }

  @media (max-width: 768px) {
    .page-content {
      padding: 40px 0;
    }

    .page-title {
      font-size: 2rem;
    }

    .page-body {
      padding: 0 20px;
    }
  }
</style>