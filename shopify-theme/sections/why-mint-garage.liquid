{
  "name": "Why Mint Garage",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "WHY MINT GARAGE?"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "We're not just another garage company. We're your partners in creating extraordinary spaces that enhance your lifestyle and increase your home's value."
    },
    {
      "type": "text",
      "id": "cta_title",
      "label": "CTA Title",
      "default": "Ready to Transform Your Garage?"
    },
    {
      "type": "textarea",
      "id": "cta_description",
      "label": "CTA Description",
      "default": "Join thousands of satisfied customers who have trusted us with their garage transformation."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "GET YOUR FREE QUOTE"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA Button URL",
      "default": "/pages/consultation"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "text",
          "id": "benefit_title",
          "label": "Benefit Title",
          "default": "Premium Quality"
        },
        {
          "type": "textarea",
